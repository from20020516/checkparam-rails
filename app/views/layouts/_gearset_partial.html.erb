<div class="row">
  <div class="col-lg-6">
    <div class="mx-auto" id="gearmenu">
      <div class="row">
        <% slots.all.each do |slot| %>
          <div class="col-3">
            <%= image_tag '/icons/64/0.png', size: "64x64", class: "gearset_#{slot.en}", data: { toggle: "tooltip" } %>
          </div>
        <% end %>
      </div>
    </div>
    <% if Rails.env == 'development' %>
      <div class="bg-light p-2">
        <%= "Job: #{user.job_id}, Set: #{user.index}, Lang: #{lang}, Act: #{controller.controller_name}\##{controller.action_name}" %><br>
        <%= gearset.inspect %>
      </div>
    <% end %>
    <%= render 'layouts/flash_messages' %>
  </div>

  <div class="col-lg-6">
    <div class="my-2 text-center">
      <%= link_to t('share_this_set'), "https://twitter.com/intent/tweet?text=Checkparamï½œ#{user.job[lang]}&url=https://checkparam.com/gearsets/#{gearset.id}&hashtags=FF11,checkparam", {onclick: "window.open(this.href,'hoge','height=400,width=600'); return false do", class: "font-weight-bold"} %>
    </div>

    <div class="form-group">
      <%= form_with model: Gearset.find_or_initialize_by(user_id: user.id, job_id: user.job_id, index: user.index) do |f| %>
        <% slots.all.each do |slot| %>
          <div class="form-group row">
            <label for="gearset_<%= slot.en %>" class="col-2 col-form-label">
              <%= image_tag '/icons/64/0.png', size: "48x48", class: "gearset_#{slot.en}", data: { toggle: "tooltip" } %>
            </label>
            <div class="col-10">
              <%= f.collection_select(slot.en, current_gears.where('slot & ? > 0', 2**slot.pos), :id, lang, {include_blank: true}, {class: "form-control", onchange: 'Rails.fire($(this).closest("form")[0], "submit")'}) %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

  </div>
</div>

<script>
  setIcon();
  // console.log(new Date());
  // define tooltip for descriptions. require popper.js a.k.a. bootstrap.bundle.js
  $(function() {
    $('[data-toggle="tooltip"]').tooltip({ html: true, container: 'body', "data-original-title": "" });
  })
</script>