<h5>Advertisement</h5>
<div class='my-4'>
  <%= link_to image_tag('refriender_logo.gif', size: '300x119'), 'https://refriender.finalfantasyxi.com/' %>
</div>
<div class='my-4 ad-area'>
  <%= render 'layouts/amazon' if Rails.env == 'production' %>
</div>
<div id='side-carousel' class='carousel slide' data-ride='carousel'>
  <div class='carousel-inner'>
    <% [*0..3].each do |i| %>
      <div class='carousel-item <%= 'active' if i == 0 %>' data-interval='5000'>
        <%= render 'layouts/cards', gs: Gearset.latest.slice(i,1) %>
      </div>
    <% end %>
  </div>
  <a class='carousel-control-prev' href='#side-carousel' role='button' data-slide='prev'>
    <span class='carousel-control-prev-icon' aria-hidden='true'></span>
    <span class='sr-only'>Previous</span>
  </a>
  <a class='carousel-control-next' href='#side-carousel' role='button' data-slide='next'>
    <span class='carousel-control-next-icon' aria-hidden='true'></span>
    <span class='sr-only'>Next</span>
  </a>
</div>
<div class='my-4'>
  <a href='https://twitter.com/from20020516?ref_src=twsrc%5Etfw' class='twitter-follow-button' data-show-count='false'>Follow @from20020516</a><script async src='https://platform.twitter.com/widgets.js' charset='utf-8'></script>
</div>
