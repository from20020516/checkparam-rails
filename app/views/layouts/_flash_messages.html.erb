<% flash.each do |type, message| %>
  <% type = 'info' if type == 'notice' %>
  <% type = 'error' if type == 'alert' %>
  <script>
    toastr.options = {
      "positionClass" : "toast-bottom-center mb-2",
      "timeOut" : 3000,
      // "debug" : true,
      // "timeOut" : 0,
      // "closeOnHover" : false,
      // "tapToDismiss" : false,
    }
    toastr.<%= type %>("<%= message %>")
  </script>
<% end %>