<% flash.each do |type, message| %>
  <% type = 'info' if type == 'notice' %>
  <% type = 'error' if type == 'alert' %>
  <script>
    toastr.options = {
      "positionClass" : "toast-top-center",
      "timeOut" : 3000,
      // "debug" : true,
      // "closeDuration": false,
      // "tapToDismiss": false,
    }
    toastr.<%= type %>("<%= message %>")
  </script>
<% end %>